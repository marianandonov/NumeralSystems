using System;

namespace FiftyMillion
{
    class FiftyMillion
    {
        static void Main(string[] args)
        {
            float f = 0.000001f;
            double d = 0.000001d;
            //decimal m = 0.000001m;

            for(int i = 0; i < 50000000; i++)
            {
                f += f;
                d += d;
               //m += m;
            }

            Console.WriteLine($"Float: {f}\nDouble: {d}");
            //Console.WriteLine($"Decimal: {m}");
        }
    }
}
